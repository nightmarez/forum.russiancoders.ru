RewriteEngine On
RewriteRule ^/([a-z]+)/$ /$1.php [L]
RewriteRule ^/user/([a-z]+)/$ /user.php?userid=$1.php [L]
RewriteRule ^/posts/([a-z]+)/$ /posts.php?userid=$1.php [L]
RewriteRule ^/topics/([a-z]+)/$ /topics.php?userid=$1.php [L]
RewriteRule ^/section/([a-z]+)/$ /section.php?sectionid=$1.php [L]
RewriteRule ^/topic/([a-z]+)/$ /topic.php?topicid=$1.php [L]